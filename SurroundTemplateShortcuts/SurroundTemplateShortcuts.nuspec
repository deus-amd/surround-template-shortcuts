    <copyright>Copyright 2017</copyright>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <dependencies>
      <dependency id="Wave" version="[8.0]" />
    </dependencies>
    <tags>livetemplates surround mnemonic keyboard shortcuts</tags>
  </metadata>
</package>
